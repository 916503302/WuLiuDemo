<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f6f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="@drawable/centerbackground">



        <RelativeLayout
            android:id="@+id/title_relative"
            android:layout_width="match_parent"
            android:layout_height="68dp"

            android:background="@drawable/centerbackground"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/nullhead_image" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/head_image"
                android:layout_marginLeft="5dp"

                android:layout_toRightOf="@id/head_image"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="#fff"
                    android:textSize="26sp" />


            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/title_relative"
            android:background="@drawable/waterwave" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="65dp"
            android:background="@color/gainsboro" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="65dp"
            android:background="@color/gainsboro" />

        <RelativeLayout
            android:id="@+id/perinfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/per_page"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/haoyou" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gotoitem" />

            <TextView
                android:id="@+id/per_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/per_page"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/per_page"
                android:layout_toRightOf="@+id/per_page"
                android:text="个人中心"
                android:textColor="#F333"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/set_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/set_up_page"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/setup" />

            <TextView
                android:id="@+id/set_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/set_up_page"
                android:text="设置"
                android:textColor="#F333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gotoitem" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="65dp"
            android:background="@color/gainsboro" />

        <RelativeLayout
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/help_page"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/help" />

            <TextView
                android:id="@+id/help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/help_page"
                android:text="帮助与反馈"
                android:textColor="#F333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/gotoitem" />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/cancle_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/cancle" />

        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cancle_page"
            android:text="注销账号"
            android:textColor="#F333"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/gotoitem" />
    </RelativeLayout>
</LinearLayout>
